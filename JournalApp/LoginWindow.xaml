<Window x:Class="JournalApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Journal Login" Height="450" Width="400"
        WindowStartupLocation="CenterScreen"
        Background="#ECF0F1"
        ResizeMode="NoResize">
    
    <Window.Resources>
        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
        </Style>
        
        <Style x:Key="PasswordBoxStyle" TargetType="PasswordBox">
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
        </Style>

        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2980B9"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <StackPanel VerticalAlignment="Center" Margin="40">
            <TextBlock Text="ðŸ–Šï¸" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,10"/>
            <TextBlock Text="My Personal Journal" 
                      FontSize="24" 
                      FontWeight="Bold" 
                      HorizontalAlignment="Center"
                      Foreground="#2C3E50"
                      Margin="0,0,0,30"/>

            <TextBlock Text="Username" FontSize="12" Margin="0,0,0,5" Foreground="#7F8C8D"/>
            <TextBox x:Name="txtUsername" Style="{StaticResource TextBoxStyle}" Margin="0,0,0,15"/>

            <TextBlock Text="Password/PIN" FontSize="12" Margin="0,0,0,5" Foreground="#7F8C8D"/>
            <PasswordBox x:Name="txtPassword" Style="{StaticResource PasswordBoxStyle}" Margin="0,0,0,20"/>

            <Button x:Name="btnLogin" Content="Login" Style="{StaticResource ButtonStyle}" Click="BtnLogin_Click" Margin="0,0,0,10"/>
            <Button x:Name="btnRegister" Content="Create New Account" Style="{StaticResource ButtonStyle}" Click="BtnRegister_Click"/>

            <TextBlock x:Name="txtError" 
                      Foreground="Red" 
                      TextAlignment="Center" 
                      Margin="0,15,0,0"
                      TextWrapping="Wrap"
                      Visibility="Collapsed"/>
        </StackPanel>
    </Grid>
</Window>
