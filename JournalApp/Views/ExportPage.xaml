<Page x:Class="JournalApp.Views.ExportPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Export" Background="{DynamicResource BackgroundBrush}">
    <StackPanel Margin="30" VerticalAlignment="Center" MaxWidth="600">
        <TextBlock Text="Export to PDF" FontSize="28" FontWeight="Bold" 
                  Foreground="{DynamicResource TextBrush}" Margin="0,0,0,20"
                  HorizontalAlignment="Center"/>

        <Border Background="{DynamicResource CardBrush}" CornerRadius="8" Padding="30"
                BorderThickness="1" BorderBrush="{DynamicResource BorderBrush}">
            <StackPanel>
                <TextBlock Text="Select Date Range" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"
                          Foreground="{DynamicResource TextBrush}"/>

                <TextBlock Text="Start Date" Margin="0,0,0,5" Foreground="{DynamicResource TextBrush}"/>
                <DatePicker x:Name="dpStartDate" Margin="0,0,0,15"/>

                <TextBlock Text="End Date" Margin="0,0,0,5" Foreground="{DynamicResource TextBrush}"/>
                <DatePicker x:Name="dpEndDate" Margin="0,0,0,20"/>

                <Button x:Name="btnExport" Content="Export to PDF" Padding="20,12" 
                       FontSize="14" Click="BtnExport_Click" HorizontalAlignment="Center"/>

                <TextBlock Text="Note: All entries within the selected date range will be exported to a single PDF file." 
                          FontSize="11" Foreground="#7F8C8D" TextWrapping="Wrap" 
                          Margin="0,20,0,0" TextAlignment="Center"/>
            </StackPanel>
        </Border>
    </StackPanel>
</Page>
