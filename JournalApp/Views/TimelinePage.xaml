<Page x:Class="JournalApp.Views.TimelinePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Timeline" Background="{DynamicResource BackgroundBrush}">
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Journal Timeline" FontSize="28" FontWeight="Bold" 
                  Foreground="{DynamicResource TextBrush}" Margin="0,0,0,20"/>

        <Border Grid.Row="1" Background="{DynamicResource CardBrush}" CornerRadius="8" Padding="20"
                BorderThickness="1" BorderBrush="{DynamicResource BorderBrush}">
            <ListView x:Name="lstEntries" BorderThickness="0" Background="Transparent"
                     MouseDoubleClick="LstEntries_MouseDoubleClick">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border BorderThickness="0,0,0,1" BorderBrush="#ECF0F1" Padding="15" Margin="0,0,0,10">
                            <StackPanel>
                                <TextBlock Text="{Binding Date, StringFormat='dddd, MMMM dd, yyyy'}" 
                                          FontWeight="Bold" FontSize="16"
                                          Foreground="{DynamicResource TextBrush}"/>
                                <TextBlock Text="{Binding Title}" FontSize="14" Margin="0,5,0,0"
                                          Foreground="{DynamicResource TextBrush}"/>
                                <TextBlock Text="{Binding Content}" FontSize="12" Margin="0,5,0,0"
                                          TextTrimming="CharacterEllipsis" MaxHeight="40"
                                          Foreground="#7F8C8D"/>
                                <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                    <TextBlock Text="Mood: " FontSize="11" Foreground="#7F8C8D"/>
                                    <TextBlock Text="{Binding PrimaryMood.Name}" FontSize="11" Foreground="#7F8C8D"/>
                                    <TextBlock Text=" | " FontSize="11" Foreground="#7F8C8D" Margin="5,0"/>
                                    <TextBlock Text="{Binding WordCount}" FontSize="11" Foreground="#7F8C8D"/>
                                    <TextBlock Text=" words" FontSize="11" Foreground="#7F8C8D"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Border>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button x:Name="btnPrevious" Content="Previous" Padding="15,8" Margin="0,0,10,0" 
                   Click="BtnPrevious_Click"/>
            <TextBlock x:Name="txtPageInfo" VerticalAlignment="Center" Margin="10,0"
                      Foreground="{DynamicResource TextBrush}"/>
            <Button x:Name="btnNext" Content="Next" Padding="15,8" Margin="10,0,0,0" 
                   Click="BtnNext_Click"/>
        </StackPanel>
    </Grid>
</Page>
