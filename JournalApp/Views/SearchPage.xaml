<Page x:Class="JournalApp.Views.SearchPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Search" Background="{DynamicResource BackgroundBrush}">
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Text="Search &amp; Filter" FontSize="28" 
                  FontWeight="Bold" Foreground="{DynamicResource TextBrush}" Margin="0,0,0,20"/>

        <!-- Filter Panel -->
        <Border Grid.Row="1" Grid.Column="0" Background="{DynamicResource CardBrush}" 
                CornerRadius="8" Padding="15" Margin="0,0,15,0"
                BorderThickness="1" BorderBrush="{DynamicResource BorderBrush}">
            <StackPanel>
                <TextBlock Text="Filters" FontWeight="Bold" FontSize="16" Margin="0,0,0,15"
                          Foreground="{DynamicResource TextBrush}"/>
                
                <TextBlock Text="Date Range" Margin="0,0,0,5" Foreground="{DynamicResource TextBrush}"/>
                <DatePicker x:Name="dpStartDate" Margin="0,0,0,5"/>
                <DatePicker x:Name="dpEndDate" Margin="0,0,0,15"/>

                <TextBlock Text="Moods" Margin="0,0,0,5" Foreground="{DynamicResource TextBrush}"/>
                <ListBox x:Name="lstMoodFilter" Height="120" SelectionMode="Multiple" 
                        DisplayMemberPath="Name" Margin="0,0,0,15"/>

                <TextBlock Text="Tags" Margin="0,0,0,5" Foreground="{DynamicResource TextBrush}"/>
                <ListBox x:Name="lstTagFilter" Height="120" SelectionMode="Multiple" 
                        DisplayMemberPath="Name" Margin="0,0,0,15"/>

                <Button x:Name="btnFilter" Content="Apply Filters" Padding="10,8" 
                       Click="BtnFilter_Click"/>
            </StackPanel>
        </Border>

        <!-- Results Panel -->
        <Border Grid.Row="1" Grid.Column="1" Background="{DynamicResource CardBrush}" 
                CornerRadius="8" Padding="20"
                BorderThickness="1" BorderBrush="{DynamicResource BorderBrush}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="txtSearch" Grid.Column="0" Padding="8" Margin="0,0,10,0"
                            ToolTip="Search by title or content"/>
                    <Button x:Name="btnSearch" Grid.Column="1" Content="Search" Padding="15,8"
                           Click="BtnSearch_Click"/>
                </Grid>

                <TextBlock x:Name="txtResultCount" Grid.Row="1" Margin="0,0,0,10"
                          Foreground="{DynamicResource TextBrush}"/>

                <ListView x:Name="lstResults" Grid.Row="2" BorderThickness="0"
                         MouseDoubleClick="LstResults_MouseDoubleClick">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border BorderThickness="0,0,0,1" BorderBrush="#ECF0F1" Padding="10">
                                <StackPanel>
                                    <TextBlock Text="{Binding Date, StringFormat='MMM dd, yyyy'}" 
                                              FontWeight="Bold" Foreground="{DynamicResource TextBrush}"/>
                                    <TextBlock Text="{Binding Title}" Margin="0,5,0,0"
                                              Foreground="{DynamicResource TextBrush}"/>
                                    <TextBlock Text="{Binding Content}" FontSize="11" 
                                              TextTrimming="CharacterEllipsis" MaxHeight="30"
                                              Margin="0,5,0,0" Foreground="#7F8C8D"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </Border>
    </Grid>
</Page>
