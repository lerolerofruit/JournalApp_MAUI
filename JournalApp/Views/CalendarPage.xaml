<Page x:Class="JournalApp.Views.CalendarPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Calendar" Background="{DynamicResource BackgroundBrush}">
    <StackPanel Margin="30">
        <TextBlock Text="Calendar View" FontSize="28" FontWeight="Bold" 
                  Foreground="{DynamicResource TextBrush}" Margin="0,0,0,20"/>
        <Border Background="{DynamicResource CardBrush}" CornerRadius="8" Padding="20"
                BorderThickness="1" BorderBrush="{DynamicResource BorderBrush}">
            <Calendar x:Name="calendar" HorizontalAlignment="Center" 
                     SelectedDatesChanged="Calendar_SelectedDatesChanged"/>
        </Border>
    </StackPanel>
</Page>
