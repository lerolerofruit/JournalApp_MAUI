<Page x:Class="JournalApp.Views.AnalyticsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Analytics" Background="{DynamicResource BackgroundBrush}">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="30">
            <TextBlock Text="Analytics &amp; Insights" FontSize="28" FontWeight="Bold" 
                       Foreground="{DynamicResource TextBrush}" Margin="0,0,0,20"/>

            <!-- Date Filter -->
            <Border Background="{DynamicResource CardBrush}" CornerRadius="8" Padding="15" 
                    Margin="0,0,0,20" BorderThickness="1" BorderBrush="{DynamicResource BorderBrush}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="From:" VerticalAlignment="Center" Margin="0,0,10,0"
                              Foreground="{DynamicResource TextBrush}"/>
                    <DatePicker x:Name="dpStartDate" Grid.Column="1" Margin="0,0,20,0"/>
                    <TextBlock Grid.Column="2" Text="To:" VerticalAlignment="Center" Margin="0,0,10,0"
                              Foreground="{DynamicResource TextBrush}"/>
                    <DatePicker x:Name="dpEndDate" Grid.Column="3" Margin="0,0,20,0"/>
                    <Button x:Name="btnRefresh" Grid.Column="4" Content="Refresh" Padding="15,8"
                           Click="BtnRefresh_Click"/>
                </Grid>
            </Border>

            <!-- Mood Distribution -->
            <Border Background="{DynamicResource CardBrush}" CornerRadius="8" Padding="20" 
                    Margin="0,0,0,20" BorderThickness="1" BorderBrush="{DynamicResource BorderBrush}">
                <StackPanel>
                    <TextBlock Text="Mood Distribution" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"
                              Foreground="{DynamicResource TextBrush}"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                            <TextBlock Text="Positive" FontWeight="Bold" Foreground="#27AE60"/>
                            <TextBlock x:Name="txtPositive" Text="0" FontSize="24" Foreground="#27AE60"/>
                            <TextBlock x:Name="txtPositivePct" Text="0%" Foreground="#7F8C8D"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1" Margin="0,0,10,0">
                            <TextBlock Text="Neutral" FontWeight="Bold" Foreground="#95A5A6"/>
                            <TextBlock x:Name="txtNeutral" Text="0" FontSize="24" Foreground="#95A5A6"/>
                            <TextBlock x:Name="txtNeutralPct" Text="0%" Foreground="#7F8C8D"/>
                        </StackPanel>
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Negative" FontWeight="Bold" Foreground="#E74C3C"/>
                            <TextBlock x:Name="txtNegative" Text="0" FontSize="24" Foreground="#E74C3C"/>
                            <TextBlock x:Name="txtNegativePct" Text="0%" Foreground="#7F8C8D"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <Grid Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Most Frequent Mood -->
                <Border Grid.Column="0" Background="{DynamicResource CardBrush}" CornerRadius="8" Padding="20" 
                        Margin="0,0,10,0" BorderThickness="1" BorderBrush="{DynamicResource BorderBrush}">
                    <StackPanel>
                        <TextBlock Text="Most Frequent Mood" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"
                                  Foreground="{DynamicResource TextBrush}"/>
                        <TextBlock x:Name="txtFrequentMood" Text="None" FontSize="20" FontWeight="Bold"
                                  Foreground="{DynamicResource TextBrush}"/>
                    </StackPanel>
                </Border>

                <!-- Average Word Count -->
                <Border Grid.Column="1" Background="{DynamicResource CardBrush}" CornerRadius="8" Padding="20" 
                        Margin="10,0,0,0" BorderThickness="1" BorderBrush="{DynamicResource BorderBrush}">
                    <StackPanel>
                        <TextBlock Text="Average Word Count" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"
                                  Foreground="{DynamicResource TextBrush}"/>
                        <TextBlock x:Name="txtAvgWords" Text="0" FontSize="20" FontWeight="Bold"
                                  Foreground="{DynamicResource TextBrush}"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Most Used Tags -->
            <Border Background="{DynamicResource CardBrush}" CornerRadius="8" Padding="20" 
                    Margin="0,0,0,20" BorderThickness="1" BorderBrush="{DynamicResource BorderBrush}">
                <StackPanel>
                    <TextBlock Text="Most Used Tags (Top 10)" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"
                              Foreground="{DynamicResource TextBrush}"/>
                    <ListBox x:Name="lstTopTags" Height="200" BorderThickness="0" Background="Transparent"/>
                </StackPanel>
            </Border>

            <!-- Word Count Trends -->
            <Border Background="{DynamicResource CardBrush}" CornerRadius="8" Padding="20" 
                    BorderThickness="1" BorderBrush="{DynamicResource BorderBrush}">
                <StackPanel>
                    <TextBlock Text="Word Count Trends" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"
                              Foreground="{DynamicResource TextBrush}"/>
                    <ListBox x:Name="lstWordTrends" Height="200" BorderThickness="0" Background="Transparent"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>
